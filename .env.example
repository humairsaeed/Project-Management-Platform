# Project Management Platform - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://dev:devpass@localhost:5432/project_mgmt

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OPENAI (for AI Insights Service)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# =============================================================================
# SERVICE URLS (for inter-service communication)
# =============================================================================
AUTH_SERVICE_URL=http://localhost:8001
PROJECT_SERVICE_URL=http://localhost:8002
INSIGHTS_SERVICE_URL=http://localhost:8003
TIMESHEET_SERVICE_URL=http://localhost:8004

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
