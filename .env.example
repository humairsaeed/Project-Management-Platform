# Project Management Platform - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=project_mgmt
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpass
DATABASE_URL=postgresql+asyncpg://dev:devpass@postgres:5432/project_mgmt

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OPENAI (for AI Insights Service)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# =============================================================================
# SERVICE URLS (for Docker inter-service communication)
# =============================================================================
AUTH_SERVICE_URL=http://auth-service:8001
PROJECT_SERVICE_URL=http://project-service:8002
INSIGHTS_SERVICE_URL=http://insights-service:8003

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
